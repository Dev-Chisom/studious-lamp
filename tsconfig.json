{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"composite": true,
		"jsx": "preserve",
		"sourceMap": true,
		"lib": ["ESNext", "DOM"],
		"baseUrl": ".",
		"paths": {
			"@whispers/*": ["packages/*/src"]
		}
	},
	"exclude": ["node_modules", "dist"],
	"references": [
		{ "path": "./packages/types" },
		{ "path": "./packages/api" }
	]
}
